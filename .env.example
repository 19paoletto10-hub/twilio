## Twilio Chat App - example environment variables
# Copy this file to `.env` and fill values before running the app.

# Twilio credentials
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Default sender (E.164), or leave empty if you use Messaging Service
TWILIO_DEFAULT_FROM=+48123456789
TWILIO_MESSAGING_SERVICE_SID=

# App settings
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=3000

# Database
DB_PATH=data/app.db

# Public URL (used to build links if needed)
PUBLIC_BASE_URL=

# Twilio signature validation
TWILIO_VALIDATE_SIGNATURE=true

# API key protecting admin endpoints (generate a random secret)
APP_API_KEY=

# Rate limiter storage (Redis) - example for docker-compose
# Use `redis://redis:6379/0` when running the provided compose (service name `redis`)
RATELIMIT_STORAGE_URL=redis://redis:6379/0

# Chat mode (demo): 'echo' or 'ai' (if chat engine available)
CHAT_MODE=echo
